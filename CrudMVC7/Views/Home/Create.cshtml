@model Contact;
@{
    ViewData["Title"] = "Crear paciente";
}
<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-info">
                <h3 class="text-white text-center">
                    <strong>Crear nuevo Paciente</strong>
                </h3>

            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label fw-bold"></label>
                                <input asp-for="Name" class="form-control font-weight-bold" placeholder="Ingresa el nombre" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="LastName" class="control-label fw-bold"></label>
                                <input asp-for="LastName" class="form-control" placeholder="Ingresa el apellido paterno" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <br />

                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="MotherLastName" class="control-label fw-bold"></label>
                                <input asp-for="MotherLastName" class="form-control font-weight-bold" placeholder="Ingresa el apellido materno" />
                                <span asp-validation-for="MotherLastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="MobilePhone" class="control-label fw-bold"></label>
                                <input asp-for="MobilePhone" class="form-control" placeholder="Ingresa el celular" oninput="this.value = this.value.replace(/[^0-9]/g,'')" />
                                <span asp-validation-for="MobilePhone" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <br />

                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="BirthDate" class="control-label fw-bold"></label>
                                <input asp-for="BirthDate" class="form-control font-weight-bold"/>
                                <span asp-validation-for="BirthDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="Direccion" class="control-label fw-bold"></label>
                                <input asp-for="Direccion" class="form-control" placeholder="Ingresa la dirección" />
                                <span asp-validation-for="Direccion" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <br />

                    <div class="form-group">
                        <div class="row">
                            <div class="col-6">
                                <button type="submit" class="btn btn-info d-block mx-auto">
                                    Crear
                                </button>
                            </div>
                            <div class="col-6">
                                <a href="@Url.Action("Index", "Home")" class="btn btn-danger">Volver</a>
                            </div>

                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
    

</div>